<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLayout"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundconer3"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@drawable/delete"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 체감온도 의상 삭제"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"/>

            <ImageView
                android:id="@+id/deletecancle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="135dp"
                android:src="@drawable/cancle" />
        </LinearLayout>
        <!--<ImageView
            android:id="@+id/Weather"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/custom2"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해당 의상을 현재 체감온도에서 제거하시겠습니까?"
            android:layout_marginTop="30dp"
            android:textSize="13dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:background="@drawable/change_background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="ok"
                android:text="확인"
                android:textColor="#515151"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>