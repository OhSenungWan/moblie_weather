<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">



    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp">

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울특별시 구로구 구로동"
        android:textSize="26dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/temp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="19℃"
                    android:gravity="center"
                    android:paddingRight="5dp"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="/"
                    android:gravity="center"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/sky"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="흐림"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:paddingLeft="5dp"/>
            </LinearLayout>
    <ImageView
        android:id="@+id/main_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cloud2" />
    <TextView
        android:id="@+id/comment"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:text="구름이 다소 많은 날이에요"
        android:gravity="center"
        android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/we_element1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="온도"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/we_element2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="체감"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/we_element3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="습도"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/we_element4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="자외선"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/we_element5"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="풍량"
                android:textStyle="italic"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FAFAFA">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#DFDFDF">

                <TextView
                    android:id="@+id/time_color1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="03시" />

                <TextView
                        android:id="@+id/time_color2"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="09시"/>
                    <TextView
                        android:id="@+id/time_color3"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="15시"/>
                    <TextView
                        android:id="@+id/time_color4"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="21시"/>
                    <TextView
                        android:id="@+id/time_color5"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="24시"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/time_img1"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/cloud2" />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:id="@+id/time_img2"
                        android:src="@drawable/cloud2" />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:id="@+id/time_img3"
                        android:src="@drawable/cloud2" />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:id="@+id/time_img4"
                        android:src="@drawable/cloud2" />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:id="@+id/time_img5"
                        android:src="@drawable/cloud2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/time_temp1"
                android:layout_weight="1"
                android:gravity="center"
                android:text="19℃"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/time_temp2"
                android:layout_weight="1"
                android:gravity="center"
                android:text="19℃"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/time_temp3"
                android:gravity="center"
                android:layout_weight="1"
                android:text="19℃"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/time_temp4"
                android:layout_weight="1"
                android:gravity="center"
                android:text="19℃"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/time_temp5"
                android:layout_weight="1"
                android:gravity="center"
                android:text="19℃"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:background="#DFDFDF">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="오늘"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="내일"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="내일 모레"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:id="@+id/day_img1"
                android:src="@drawable/cloud2" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:id="@+id/day_img2"
                android:src="@drawable/cloud2" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:id="@+id/day_img3"
                android:src="@drawable/cloud2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/day_temp1"
                android:text="19℃"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/day_temp2"
                android:text="19℃"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/day_temp3"
                android:text="19℃"/>

        </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>



