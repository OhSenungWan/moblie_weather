<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLayout"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:background="@drawable/widget_background"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">
        <TextView
            android:id="@+id/realtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:text="Update 5/8 17:10"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="200dp"/>
            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:src="@drawable/update1"
                android:layout_marginTop="12dp"
                android:layout_marginRight="7dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
        <ImageView
            android:id="@+id/Weather"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/list_sun"
            android:layout_marginTop="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_marginBottom="15dp">
        <TextView
            android:id="@+id/Temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="35dp"
            android:fontFamily="@font/seoulnamsan_long"
            android:text="21℃"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/weatherText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="0dp"
                    android:text="Sunny"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="bottom"
                    android:text="서울특별시 구로구 구로 제1동"
                    android:textSize="11dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:background="@drawable/widget_background2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="강수확률"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ros_mainunder" />

                <TextView
                    android:id="@+id/pop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="10%"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="미세먼지"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/pm10grade"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="보통"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/pm10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2.5ug/㎣"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="초미세먼지"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/pm25grade"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="나쁨"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/pm25"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="10.5ug/㎣"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</LinearLayout>